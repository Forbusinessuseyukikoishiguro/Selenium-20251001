from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time


# ============================================
# ã€ã‚¹ãƒ†ãƒƒãƒ—1ã€‘Chrome DevToolsã§XPathå–å¾—
# ============================================

"""
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
   Chrome DevToolsã§XPathã‚’å–å¾—ã™ã‚‹æ‰‹é †
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

1. Chromeã§ã‚µã‚¤ãƒˆã‚’é–‹ã
   ä¾‹: https://example.com

2. å–å¾—ã—ãŸã„è¦ç´ ã‚’è¦‹ã¤ã‘ã‚‹
   ä¾‹: ãƒšãƒ¼ã‚¸ã‚¿ã‚¤ãƒˆãƒ«ã®<h1>ã‚¿ã‚°

3. ãã®è¦ç´ ã‚’å³ã‚¯ãƒªãƒƒã‚¯ â†’ ã€Œæ¤œè¨¼ã€
   â†’ DevToolsãŒé–‹ãã€è¦ç´ ãŒãƒã‚¤ãƒ©ã‚¤ãƒˆã•ã‚Œã‚‹

4. DevToolsã§é’ããƒã‚¤ãƒ©ã‚¤ãƒˆã•ã‚ŒãŸè¡Œã‚’å³ã‚¯ãƒªãƒƒã‚¯

5. ã€ŒCopyã€â†’ã€ŒCopy XPathã€ã‚’é¸æŠ

6. ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã«XPathãŒã‚³ãƒ”ãƒ¼ã•ã‚Œã‚‹
   ä¾‹: //*[@id="main"]/div[2]/h1

â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
"""


# ============================================
# ã€ã‚¹ãƒ†ãƒƒãƒ—2ã€‘å–å¾—ã—ãŸXPathã‚’Seleniumã§ä½¿ã†
# ============================================

def example_1_simple_xpath():
    """
    ä¾‹1: DevToolsã§å–å¾—ã—ãŸXPathã‚’ãã®ã¾ã¾ä½¿ã†
    """
    print("=" * 70)
    print("ä¾‹1: DevToolsã§å–å¾—ã—ãŸXPathã‚’ãã®ã¾ã¾ä½¿ã†")
    print("=" * 70)
    
    # Chromeãƒ‰ãƒ©ã‚¤ãƒãƒ¼ã‚’èµ·å‹•
    options = Options()
    # options.add_argument('--headless')  # ã‚³ãƒ¡ãƒ³ãƒˆã‚¢ã‚¦ãƒˆ = ãƒ–ãƒ©ã‚¦ã‚¶è¡¨ç¤º
    driver = webdriver.Chrome(options=options)
    
    try:
        # ã‚µã‚¤ãƒˆã‚’é–‹ã
        driver.get('https://example.com')
        time.sleep(2)
        
        # â”â”â” DevToolsã§ã‚³ãƒ”ãƒ¼ã—ãŸXPathã‚’ãã®ã¾ã¾è²¼ã‚Šä»˜ã‘ â”â”â”
        # ä¾‹: //*[@id="main"]/div[2]/h1
        xpath = '/html/body/div/h1'  # Example.comã®h1ã‚¿ã‚°
        
        # XPathã§è¦ç´ ã‚’å–å¾—
        element = driver.find_element(By.XPATH, xpath)
        
        # ãƒ†ã‚­ã‚¹ãƒˆã‚’è¡¨ç¤º
        print(f"\n[å–å¾—æˆåŠŸ] ãƒ†ã‚­ã‚¹ãƒˆ: {element.text}")
        print(f"[å–å¾—æˆåŠŸ] ã‚¿ã‚°å: {element.tag_name}")
        
    finally:
        driver.quit()


def example_2_copy_full_xpath():
    """
    ä¾‹2: Copy Full XPath ã‚’ä½¿ã†ï¼ˆå®Œå…¨ãªãƒ‘ã‚¹ï¼‰
    """
    print("\n" + "=" * 70)
    print("ä¾‹2: Copy Full XPathï¼ˆãƒ•ãƒ«ãƒ‘ã‚¹ï¼‰ã‚’ä½¿ã†")
    print("=" * 70)
    
    """
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    Copy Full XPath ã¨ã¯ï¼Ÿ
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    
    DevToolsã§å³ã‚¯ãƒªãƒƒã‚¯ â†’ Copy â†’ Copy full XPath
    
    ä¾‹: /html/body/div/h1
    
    ç‰¹å¾´:
    âœ… çµ¶å¯¾ãƒ‘ã‚¹ï¼ˆhtmlã‹ã‚‰å§‹ã¾ã‚‹ï¼‰
    âŒ HTMLã®æ§‹é€ ãŒå¤‰ã‚ã‚‹ã¨å‹•ã‹ãªããªã‚‹
    âŒ é•·ãã¦èª­ã¿ã«ãã„
    
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    """
    
    options = Options()
    driver = webdriver.Chrome(options=options)
    
    try:
        driver.get('https://example.com')
        time.sleep(2)
        
        # Full XPathï¼ˆçµ¶å¯¾ãƒ‘ã‚¹ï¼‰
        full_xpath = '/html/body/div/h1'
        
        element = driver.find_element(By.XPATH, full_xpath)
        print(f"\n[Full XPath] {full_xpath}")
        print(f"[å–å¾—æˆåŠŸ] {element.text}")
        
    finally:
        driver.quit()


def example_3_improved_xpath():
    """
    ä¾‹3: DevToolsã®XPathã‚’æ”¹è‰¯ã—ã¦ä½¿ã†ï¼ˆæ¨å¥¨ï¼‰
    """
    print("\n" + "=" * 70)
    print("ä¾‹3: XPathã‚’æ”¹è‰¯ã™ã‚‹ï¼ˆæ¨å¥¨æ–¹æ³•ï¼‰")
    print("=" * 70)
    
    """
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    DevToolsã®XPathã‚’æ”¹è‰¯ã™ã‚‹æ–¹æ³•
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    
    ã€æ‚ªã„ä¾‹ã€‘DevToolsã§å–å¾—ã—ãŸXPathï¼ˆçµ¶å¯¾ãƒ‘ã‚¹ï¼‰
    /html/body/div[1]/div[2]/div[3]/article/h1
    
    â†“ æ”¹è‰¯ â†“
    
    ã€è‰¯ã„ä¾‹ã€‘ç›¸å¯¾XPathã«æ›¸ãæ›ãˆ
    //h1
    //article//h1
    //h1[@class="title"]
    
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    """
    
    options = Options()
    driver = webdriver.Chrome(options=options)
    
    try:
        driver.get('https://example.com')
        time.sleep(2)
        
        # âŒ DevToolsã§å–å¾—ã—ãŸçµ¶å¯¾XPath
        bad_xpath = '/html/body/div/h1'
        
        # âœ… æ”¹è‰¯ã—ãŸç›¸å¯¾XPathï¼ˆæ¨å¥¨ï¼‰
        good_xpath = '//h1'  # ã‚·ãƒ³ãƒ—ãƒ«ã§èª­ã¿ã‚„ã™ã„
        
        print("\n--- çµ¶å¯¾XPathï¼ˆéæ¨å¥¨ï¼‰---")
        element1 = driver.find_element(By.XPATH, bad_xpath)
        print(f"XPath: {bad_xpath}")
        print(f"çµæœ: {element1.text}")
        
        print("\n--- ç›¸å¯¾XPathï¼ˆæ¨å¥¨ï¼‰---")
        element2 = driver.find_element(By.XPATH, good_xpath)
        print(f"XPath: {good_xpath}")
        print(f"çµæœ: {element2.text}")
        
    finally:
        driver.quit()


def example_4_console_test():
    """
    ä¾‹4: DevToolsã®Consoleã§XPathã‚’ãƒ†ã‚¹ãƒˆã™ã‚‹æ–¹æ³•
    """
    print("\n" + "=" * 70)
    print("ä¾‹4: Consoleã§XPathã‚’ãƒ†ã‚¹ãƒˆ")
    print("=" * 70)
    
    """
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    DevToolsã®Consoleã§XPathã‚’ãƒ†ã‚¹ãƒˆã™ã‚‹æ‰‹é †
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    
    1. F12 ã§DevToolsã‚’é–‹ã
    
    2. ã€ŒConsoleã€ã‚¿ãƒ–ã‚’ã‚¯ãƒªãƒƒã‚¯
    
    3. ä»¥ä¸‹ã®ã‚ˆã†ã«å…¥åŠ›ã—ã¦Enter:
    
       $x('//h1')
       
       â†’ è¦‹ã¤ã‹ã£ãŸè¦ç´ ãŒé…åˆ—ã§è¡¨ç¤ºã•ã‚Œã‚‹
       â†’ [<h1>Example Domain</h1>]
    
    4. è¤‡æ•°ã®è¦ç´ ãŒã‚ã‚‹å ´åˆ:
    
       $x('//div[@class="article"]')
       
       â†’ (3) [div.article, div.article, div.article]
       â†’ 3å€‹ã®è¦ç´ ãŒè¦‹ã¤ã‹ã£ãŸ
    
    5. è¦ç´ ãŒè¦‹ã¤ã‹ã‚‰ãªã„å ´åˆ:
    
       $x('//div[@id="not-exist"]')
       
       â†’ []
       â†’ ç©ºã®é…åˆ— = è¦‹ã¤ã‹ã‚‰ãªã„
    
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    
    âœ… Pythonã§å®Ÿè£…ã™ã‚‹å‰ã«ã€å¿…ãšConsoleã§ãƒ†ã‚¹ãƒˆã—ã¾ã—ã‚‡ã†ï¼
    """
    
    print("\nã€Consoleã§ãƒ†ã‚¹ãƒˆã™ã‚‹ã‚³ãƒãƒ³ãƒ‰ã€‘")
    print("$x('//h1')                          # ã™ã¹ã¦ã®h1è¦ç´ ")
    print("$x('//div[@class=\"article\"]')     # class=\"article\"ã®div")
    print("$x('//a[@href]')                    # hrefå±æ€§ãŒã‚ã‚‹aè¦ç´ ")
    print("$x('(//div)[1]')                    # æœ€åˆã®divè¦ç´ ")
    
    # å®Ÿéš›ã«Seleniumã§å®Ÿè¡Œ
    options = Options()
    driver = webdriver.Chrome(options=options)
    
    try:
        driver.get('https://example.com')
        time.sleep(2)
        
        # Consoleã§ãƒ†ã‚¹ãƒˆã—ãŸå¾Œã€Pythonã§å®Ÿè£…
        test_xpaths = [
            '//h1',                    # ã™ã¹ã¦ã®h1
            '//body//h1',              # bodyé…ä¸‹ã®h1
            '//div//h1',               # divé…ä¸‹ã®h1
        ]
        
        print("\nã€å®Ÿè¡Œçµæœã€‘")
        for xpath in test_xpaths:
            elements = driver.find_elements(By.XPATH, xpath)
            print(f"\nXPath: {xpath}")
            print(f"è¦‹ã¤ã‹ã£ãŸè¦ç´ æ•°: {len(elements)}")
            if elements:
                print(f"æœ€åˆã®è¦ç´ : {elements[0].text}")
        
    finally:
        driver.quit()


def example_5_practical_patterns():
    """
    ä¾‹5: å®Ÿè·µçš„ãªXPathãƒ‘ã‚¿ãƒ¼ãƒ³é›†
    """
    print("\n" + "=" * 70)
    print("ä¾‹5: å®Ÿè·µçš„ãªXPathãƒ‘ã‚¿ãƒ¼ãƒ³é›†")
    print("=" * 70)
    
    """
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    å®Ÿè·µçš„ãªXPathãƒ‘ã‚¿ãƒ¼ãƒ³
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³1ã€‘ã‚¯ãƒ©ã‚¹åã§æ¤œç´¢
    DevToolsã§å–å¾—: //*[@id="main"]/div[3]/article[1]
    â†“ æ”¹è‰¯
    //article[@class="news-item"]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³2ã€‘ID ã§æ¤œç´¢
    DevToolsã§å–å¾—: //*[@id="header"]/div/h1
    â†“ æ”¹è‰¯
    //h1[@id="site-title"]
    ã¾ãŸã¯
    //*[@id="site-title"]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³3ã€‘ãƒ†ã‚­ã‚¹ãƒˆã§æ¤œç´¢
    //button[text()="é€ä¿¡"]
    //a[contains(text(), "è©³ç´°")]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³4ã€‘å±æ€§ã§æ¤œç´¢
    //a[@href="/about"]
    //img[@alt="ãƒ­ã‚´"]
    //input[@name="email"]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³5ã€‘éƒ¨åˆ†ä¸€è‡´
    //div[contains(@class, "article")]
    //a[contains(@href, "product")]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³6ã€‘è¤‡æ•°æ¡ä»¶
    //div[@class="item" and @data-id="123"]
    //a[@href and @target="_blank"]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³7ã€‘è¦ªã‹ã‚‰å­ã¸
    //div[@class="container"]//h2[@class="title"]
    
    ã€ãƒ‘ã‚¿ãƒ¼ãƒ³8ã€‘ã‚¤ãƒ³ãƒ‡ãƒƒã‚¯ã‚¹æŒ‡å®š
    (//article)[1]           # æœ€åˆ
    (//article)[last()]      # æœ€å¾Œ
    (//article)[position()<=3]  # æœ€åˆã®3ã¤
    
    â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
    """
    
    options = Options()
    driver = webdriver.Chrome(options=options)
    
    try:
        driver.get('https://example.com')
        time.sleep(2)
        
        # ãƒ‘ã‚¿ãƒ¼ãƒ³é›†ã®å®Ÿè£…ä¾‹
        patterns = {
            "ã™ã¹ã¦ã®h1": '//h1',
            "ã™ã¹ã¦ã®aè¦ç´ ": '//a',
            "hrefå±æ€§ãŒã‚ã‚‹aè¦ç´ ": '//a[@href]',
            "ç‰¹å®šã®ãƒ†ã‚­ã‚¹ãƒˆ": '//h1[contains(text(), "Example")]',
            "æœ€åˆã®div": '(//div)[1]',
        }
        
        print("\nã€å®Ÿè¡Œçµæœã€‘")
        for name, xpath in patterns.items():
            try:
                elements = driver.find_elements(By.XPATH, xpath)
                print(f"\n{name}:")
                print(f"  XPath: {xpath}")
                print(f"  è¦‹ã¤ã‹ã£ãŸæ•°: {len(elements)}")
                if elements:
                    text = elements[0].text[:50] if elements[0].text else "(ãƒ†ã‚­ã‚¹ãƒˆãªã—)"
                    print(f"  æœ€åˆã®è¦ç´ : {text}")
            except Exception as e:
                print(f"  ã‚¨ãƒ©ãƒ¼: {e}")
        
    finally:
        driver.quit()


def example_6_step_by_step():
